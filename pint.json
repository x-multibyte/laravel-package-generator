{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "phpdoc_no_empty_return": true,
        "phpdoc_order": true,
        "phpdoc_separation": true,
        "phpdoc_summary": true,
        "phpdoc_to_comment": true,
        "phpdoc_trim": true,
        "phpdoc_types": true,
        "phpdoc_var_without_name": true
    }
}